{
  "compilerOptions": {
    "strict": true,
    "module": "ESNext",
    "target": "ES2015",
    "lib": ["ESNext", "DOM"],
    "moduleResolution": "node",
    "removeComments": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "allowJs": false,
    "noUnusedLocals": true,
    "outDir": "dist",
    "rootDir": ".",
    "baseUrl": "."
  },
  "include": ["src"],
  "exclude": ["node_modules", "test"]
}
