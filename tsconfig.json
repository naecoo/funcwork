{
	"compilerOptions": {
		"strict": true,
		"target": "ESNext",
		"module": "ESNext",
		"lib": ["ESNext", "DOM"],
		"moduleResolution": "node",
		"removeComments": true,
		"esModuleInterop": true,
		"experimentalDecorators": true,
		"allowJs": false,
		"noUnusedLocals": true,
		"outDir": "dist",
		"rootDir": ".",
		"baseUrl": ".",
	},
	"include": ["src"],
	"exclude": ["node_modules", "test"]
}
